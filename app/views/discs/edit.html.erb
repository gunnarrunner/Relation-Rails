<%= form_with url: "/discs/#{@disc.id}", method: :patch, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, :value => "#{@disc.name}" %></br>
  <%= f.label :speed %>
  <%= f.text_field :speed, :value => "#{@disc.speed}" %></br>
  <%= f.label :in_production %>
  <%= f.check_box :in_production, checked: "#{@disc.in_production}" %> (Check If Disc Is Still In Production)</br>
  <%= f.submit 'Update Disc' %>
<% end %>
